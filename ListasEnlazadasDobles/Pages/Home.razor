@page "/lista-enlazada"

@using Listas.Services

<h3>Gestión de Lista Enlazada Simple</h3>

@if (listaEstaVacia)
{
    <p>La lista está actualmente vacía.</p>
}
else
{
    <ul>
        @foreach (var nodo in listaEnlazada)
        {
            <li>Valor: @nodo.Valor</li>
        }
    </ul>
}

<h4>Agregar un Nodo al Inicio</h4>
<input type="number" @bind="valorNodo" />
<button @onclick="AgregarNodo">Agregar</button>

<h4>Eliminar un Nodo</h4>
<input type="number" @bind="posicionNodo" />
<button @onclick="EliminarNodoAntes">Eliminar Antes</button>
<button @onclick="EliminarNodoDespues">Eliminar Después</button>

@code {
    ListaEnlazadaSimple listaEnlazada = new ListaEnlazadaSimple();
    int valorNodo;
    int posicionNodo;
    bool listaEstaVacia => listaEnlazada.EstaVacia();

    void AgregarNodo()
    {
        listaEnlazada.InsertarNodoAlInicio(valorNodo);
    }

    void EliminarNodoAntes()
    {
        // Aquí puedes llamar al método de tu clase con manejo de errores.
        // Por ejemplo, puedes mostrar un mensaje si la posición es inválida.
    }

    void EliminarNodoDespues()
    {
        // Similar al método anterior, con manejo de errores adecuado.
    }
}
